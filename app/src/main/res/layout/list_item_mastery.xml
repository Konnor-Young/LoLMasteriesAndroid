<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mastery_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@color/background_blue">

    <ImageView
        android:id="@+id/icon_champion"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name_champion"
        android:text="Champion Name"
        android:textSize="25dp"
        android:textColor="@color/text_gray"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/icon_champion"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mastery_level"
        android:text="Mastery Level"
        android:textSize="25dp"
        android:textColor="@color/text_gray"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/icon_champion"
        app:layout_constraintTop_toBottomOf="@+id/name_champion"
        app:layout_constraintEnd_toStartOf="@+id/mastery_points"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/mastery_points"
        android:text="Mastery Points"
        android:textSize="20dp"
        android:textColor="@color/text_gray"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mastery_level"
        app:layout_constraintTop_toBottomOf="@+id/name_champion"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>